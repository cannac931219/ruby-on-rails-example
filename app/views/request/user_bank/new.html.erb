<div style="color: #000;position: relative;top: 20px;left: 270px;">
	<div>
		<h3>创建用户银行卡</h3>
		<div>
			<%= form_tag controller: 'request/user_bank', acition: 'create', method: 'post' do %>
				<div>
					<label for="user_id">用户</label>
					<select id="user_id" name="user_id">
						<% @user.each do |u| %>
							<option value="<%= u.id %>"><%= u.user_name %></option>
						<% end %>
					</select>
				</div>
				<div>
					<label for="bank_id">bank</label>
					<%= select_tag :bank_id, options_for_select(@bank.map{|c| [c.bank_name, c.id]})%>
				</div>
				<div>
					<label for="branch_id">bankbranch</label>
					<%= select_tag :branch_id, options_for_select(@bankbranch.map{|c| [c.branch_name, c.id]})%>
				</div>
				<div>
					<label for="bank_card">bankCard</label>
					<%= text_field_tag(:bank_card, '', placeholder:'cardNo') %>
				</div>
				<%= submit_tag( '添加' )%>
			<% end %>	
		</div>
	</div>
</div>
